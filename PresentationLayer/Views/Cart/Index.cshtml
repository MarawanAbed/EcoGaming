<div class="container mt-4">
    <h2 class="text-light text-center mb-4">Shopping Cart</h2>

    <!-- Cart Items -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card bg-dark text-light p-3 border border-secondary">
                <div class="card-body">
                    @foreach (var item in GetDemoCartItems())
                    {
                        <div class="row mb-4 pb-3 border-bottom border-secondary">
                            <div class="col-md-3 text-center">
                                <img src="@item.ImageUrl" class="img-fluid rounded" alt="@item.Name" style="max-height: 120px;">
                            </div>
                            <div class="col-md-6">
                                <h5 class="fw-bold text-light">@item.Name</h5>
                                <p class="text-light-50">@item.Description</p>
                                <p class="fw-bold text-success">$@item.Price</p>
                            </div>
                            <div class="col-md-3 text-center">
                                <input type="number" class="form-control text-center bg-dark text-light border border-secondary"
                                       value="@item.Quantity" min="1" max="10" style="width: 60px; display: inline;">
                                <p class="fw-bold mt-2">$@(item.Price * item.Quantity)</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Cart Summary -->
        <div class="col-lg-4">
            <div class="card bg-dark text-light p-3 border border-secondary">
                <div class="card-body">
                    <h4 class="fw-bold text-light">Cart Summary</h4>
                    <p class="text-light-50">Total Items: <span class="fw-bold">@GetDemoCartItems().Sum(i => i.Quantity)</span></p>
                    <p class="text-light-50">Total Price: <span class="fw-bold text-success">$@GetDemoCartItems().Sum(i => i.Price * i.Quantity)</span></p>
                    <button class="btn btn-primary w-100 py-2 fw-bold mt-3">Proceed to Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public class CartItem
    {
        public string Name { get; set; }
        public string Description { get; set; }
        public double Price { get; set; }
        public int Quantity { get; set; }
        public string ImageUrl { get; set; }
    }

    public List<CartItem> GetDemoCartItems()
    {
        return new List<CartItem>
        {
            new CartItem { Name = "Cyberpunk 2077", Description = "An open-world RPG set in Night City.", Price = 39.99, Quantity = 1, ImageUrl = "/Images/game.jpeg" },
            new CartItem { Name = "Razer Gaming Mouse", Description = "High precision gaming mouse for pro players.", Price = 79.99, Quantity = 1, ImageUrl = "/Images/game.jpeg" }
        };
    }
}
