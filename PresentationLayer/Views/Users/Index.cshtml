@{
}
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h2 class="text-light text-center mb-4">Manage Users</h2>
    <table id="usersTable" class="table table-dark table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in GetDemoUsers())
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <button class="btn btn-sm btn-warning">Edit</button>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#usersTable').DataTable();
    });
</script>

@functions {
    public class User
    {
        public int Id { get; set; }
        public string Username { get; set; }
        public string Email { get; set; }
        public string Role { get; set; }
    }

    public List<User> GetDemoUsers()
    {
        return new List<User>
        {
            new User { Id = 1, Username = "admin", Email = "admin@ecogaming.com", Role = "Admin" },
            new User { Id = 2, Username = "john_doe", Email = "john@example.com", Role = "Customer" }
        };
    }
}
