@model PresentationLayer.ModelsVm.Users.EditUsersVm

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-4">
    <h2 class="text-light text-center mb-4">Edit User</h2>

    <div class="card bg-dark text-light p-4 border border-secondary">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control bg-dark text-light" asp-for="UserName" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control bg-dark text-light" asp-for="Email" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label">Roles</label>
                    <select asp-for="SelectedRoles" class="form-select bg-dark text-light" multiple>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role" selected="@(Model.UserRoles.Contains(role) ? "selected" : null)">
                                @role
                            </option>
                        }
                    </select>
                    <small class="text-secondary">Hold CTRL (Windows) or CMD (Mac) to select multiple roles.</small>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
