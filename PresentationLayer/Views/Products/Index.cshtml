@{
}
@{
    ViewData["Title"] = "Manage Products";
}

<div class="container mt-4">
    <h2 class="text-light text-center mb-4">Manage Products</h2>
    <table id="productsTable" class="table table-dark table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in GetDemoProducts())
            {
                <tr>
                    <td>@product.Id</td>
                    <td><img src="@product.ImageUrl" width="50" class="rounded"></td>
                    <td>@product.Name</td>
                    <td>$@product.Price</td>
                    <td>@product.Category</td>
                    <td>
                        <button class="btn btn-sm btn-warning">Edit</button>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#productsTable').DataTable();
    });
</script>

@functions {
    public class Product
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public double Price { get; set; }
        public string Category { get; set; }
        public string ImageUrl { get; set; }
    }

    public List<Product> GetDemoProducts()
    {
        return new List<Product>
        {
            new Product { Id = 1, Name = "Cyberpunk 2077", Price = 39.99, Category = "PC Games", ImageUrl = "/Images/game.jpeg" },
            new Product { Id = 2, Name = "God of War", Price = 49.99, Category = "Console Games", ImageUrl = "/Images/game.jpeg" }
        };
    }
}
