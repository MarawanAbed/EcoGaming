@{
}
@model List<OrderDto>

<div class="container mt-4">
    <h2 class="text-light text-center mb-4">Order History</h2>

    @if (Model.Any())
    {
        @foreach (var order in Model)
        {
            <div class="card bg-dark text-light mb-4 p-3 border border-secondary">
                <div class="card-body">
                    <h5 class="fw-bold">Order #@order.OrderId</h5>
                    <p><strong>Date:</strong> @order.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
                    <p><strong>Status:</strong> <span class="badge bg-info">@order.Status</span></p>
                    <p><strong>Total Amount:</strong> <span class="text-success">$@order.TotalAmount</span></p>

                    <h6 class="mt-3">Items:</h6>
                    <ul class="list-group">
                        @foreach (var item in order.OrderDetails)
                        {
                            <li class="list-group-item bg-dark text-light border-secondary">
                                <strong>@item.ProductName</strong> - @item.Quantity x $@item.Price
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning text-center">
            You have no past orders.
        </div>
    }
</div>
