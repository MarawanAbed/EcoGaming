@model ForgetPasswordActionRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EcoGaming - Forgot Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background: linear-gradient(135deg, #121212, #1a1a1a);
            color: #ffffff;
        }

        .auth-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .auth-card {
            background-color: #222;
            border: 1px solid #00ffcc;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 20px rgba(0, 255, 204, 0.3);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .auth-title {
            font-size: 1.8rem;
            font-weight: bold;
            color: #00ffcc;
        }

        .input-group {
            margin-bottom: 15px;
        }

        .input-group-addon {
            background: #00ffcc;
            color: #121212;
            padding: 10px;
            border-radius: 5px 0 0 5px;
        }

        .form-control {
            border: 1px solid #00ffcc;
            background: #333;
            color: #fff;
        }

        .auth-btn {
            background-color: #00ffcc;
            color: #121212;
            font-weight: bold;
            border: none;
            transition: all 0.3s ease-in-out;
        }

            .auth-btn:hover {
                background-color: #009999;
                box-shadow: 0px 0px 10px rgba(0, 255, 204, 0.8);
            }

    </style>
</head>
<body>

    <div class="auth-container">
        <div class="auth-card">
            <img src="~/Images/Ecommerce.png" alt="EcoGaming Logo" class="mb-4" width="120">

            <h2 class="auth-title">Forgot Password</h2>
            <p class="text-light">Enter your email to reset your password</p>

            <form asp-action="ForgotPassword" asp-controller="Account">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input type="email" class="form-control" placeholder="Email" asp-for="Email">
                </div>

                <button type="submit" class="btn auth-btn w-100 py-2">Reset Password</button>
            </form>
        </div>
    </div>

</body>
</html>
